@model IEnumerable<CrudNetCore5.Models.Book> 
@{
    ViewData["Title"] = "Book List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @if (TempData["message"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["message"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <div class="row">
        <div class="col-sm-6">
            <h3>List of Books</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-outline-primary d-block" asp-action="Create" asp-controller="Book">Add Book</a>
        </div>
    </div>
    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(m => m.Id)</td>
                        <td>@Html.DisplayNameFor(m => m.Title)</td>
                        <td>@Html.DisplayNameFor(m => m.Description)</td>
                        <td>@Html.DisplayNameFor(m => m.ReleaseDate)</td>
                        <td>@Html.DisplayNameFor(m => m.Author)</td>
                        <td>@Html.DisplayNameFor(m => m.Price)</td>
                        <td>Actions</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.ReleaseDate</td>
                            <td>@item.Author</td>
                            <td>@item.Price</td>
                            <td>
                                <a class="btn btn-info" asp-controller="Book" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <a class="btn btn-danger" asp-controller="Book" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h3>No Books Found</h3>
        }
    </div>
</div>

